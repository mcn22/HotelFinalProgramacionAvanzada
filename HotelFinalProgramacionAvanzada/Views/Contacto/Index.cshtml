<script src="https://cdn.tiny.cloud/1/pvznw4p9hs9x32dl121ozluvj8gdsuj0gw0hhx8sfq9q02pl/tinymce/5/tinymce.min.js"
        referrerpolicy="origin"></script>
<script>
    tinymce.init({
        selector: 'textarea'
    });
</script>

<div class="row">
    <div class="col-md-12">
        <form name="Enviar" action="mailto:jemark21@outlook.com?&subject=Consulta" method="post" enctype="text/plain">
            <h1>Contáctenos</h1>
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-6 float-left">
                        <div class="form-group m-1">
                            <label class="control-label">Nombre</label>
                            <div class="input-group">
                                <input placeholder="Escriba su nombre" name="Nombre" required="required" maxlength="15" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 float-left">
                        <div class="form-group m-1">
                            <label class="control-label">Apellidos</label>
                            <div class="input-group">
                                <input placeholder="Escriba sus apellidos" name="Apellidos" required="required" maxlength="20" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-6 float-left">
                        <div class="form-group row m-1">
                            <label class="control-label">Teléfono</label>
                            <div class="input-group">
                                <input placeholder="Numero telefónico" type="tel" name="Telefono" required="required" maxlength="11" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 float-left">
                        <div class="form-group row m-1">
                            <label class="control-label">Correo</label>
                            <div class="input-group">
                                <input type="email" name="Correo" required="required" placeholder="Correo electrónico" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-12 float-left">
                        <div class="form-group row m-1">
                            <label class="control-label">Asunto</label>
                            <div class="input-group">
                                <input type="text" name="Asunto" required="required" maxlength="15" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 float-left">
                        <label class="control-label">Mensaje</label>
                        <textarea class="form-control"
                                  rows="3"></textarea>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group row m-1">
                        <div class="col-md-12 offset-md-4 mt-4">
                            <input type="button" value="Enviar" class="btn btn-primary" style="width: 325px"/>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}