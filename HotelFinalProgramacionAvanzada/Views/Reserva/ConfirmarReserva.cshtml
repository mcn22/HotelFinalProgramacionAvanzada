@model HotelFinalProgramacionAvanzada.Models.ViewModels.ReservaDemoViewModel

@{ ViewData["Title"] = "Confirmar reserva"; }

<div class="row">
    <div class="col-md-12">
        <form asp-action="ConfirmarReserva">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Reserva.HabitacionId" />
            <input type="hidden" asp-for="Reserva.UserId" />
            <input type="hidden" asp-for="Reserva.CostoTotal" />
            <input type="hidden" asp-for="Llegada" />
            <input type="hidden" asp-for="Salida" />

            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <div class="row">
                        <div class="col-md-12 mt-4 ">
                            <h2>Confirma los datos de tu reserva</h2>
                            <hr />
                        </div>
                    </div>
                    <div class="row">
                        @{
                            var dias = Convert.ToInt32((Model.Reserva.FechaSalida - Model.Reserva.FechaLlegada).TotalDays);
                            DateTime llegada = Model.Reserva.FechaLlegada;
                            DateTime salida = Model.Reserva.FechaSalida;


                        }
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Reserva.FechaLlegada" style="font-size: 23px"></label>
                                <input type="hidden" asp-for="Reserva.FechaLlegada" />
                                <h6 class="ml-3">@llegada.Day/@llegada.Month/@llegada.Year</h6>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Reserva.FechaSalida" style="font-size: 23px"></label>
                                <input type="hidden" asp-for="Reserva.FechaSalida" />
                                <h6 class="ml-3">@salida.Day/@salida.Month/@salida.Year</h6>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label" style="font-size: 23px">Dias de hospedaje</label>
                                <h6 class="ml-3">@dias días</h6>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Reserva.CostoTotal" class="control-label" style="font-size: 23px"></label>
                                <h6 class="ml-3">₡@Model.Reserva.CostoTotal</h6>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <hr />
                            <input type="submit" value="Confirmar reserva" class="btn btn-primary btn-block mt-3" />
                        </div>
                    </div>
                </div>
            </div>            
        </form>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}


