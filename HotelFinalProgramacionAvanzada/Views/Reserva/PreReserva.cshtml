@model HotelFinalProgramacionAvanzada.Models.ViewModels.ReservaViewModel

@{ ViewData["Title"] = "Selecion de detalle"; }

<div class="row">
    <div class="col-md-12 mt-3">
        <div class="card bg-dark text-white">
            <img class="card-img img-responsive" src="~/images/hoteles/banner-hotel2.jpg" alt="Hotel @Model.Hotel.Nombre">
            <div class="card-img-overlay" style="background-color: rgba(0, 0, 0, 0.6);">
                <h5 class="card-title">@Model.Hotel.Nombre</h5>
                <p class="card-text">@Model.Hotel.Descripcion</p>
                <p class="card-text"><small>@Model.Hotel.Ciudad, @Model.Hotel.Ciudad. Teléfono: +506 @Model.Hotel.Telefono</small></p>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-12 mt-3">
        <h3>Tipos de habitación.</h3>
        @foreach (var item in Model.TiposHabitacionList)
        {
            <div class="col-sm-6 col-md-4 mt-2" style="float:left">
                <div class="card">
                    <img class="card-img-top img-responsive" src="~/images/habitacion/individual.jpg" alt="Tipo de habitacion @item.Nombre">
                    <div class="card-body">
                        <h3>@item.Nombre</h3>
                        <p class="card-text">@item.Descripcion</p>
                        <p class="card-text"><small class="text-muted">Costo por noche: @item.CostoNoche Colones</small></p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="row">

    <div class="col-md-12 mt-4">
        <hr />
        <form asp-action="PreReserva">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Hotel.HotelId" />
            <h4>Completa los siguientes datos:</h4>
            <div class="col-sm-6 mt-2" style="float: left">
                <div class="form-group">
                    @Html.LabelFor(model => model.Reserva.FechaLlegada, htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Reserva.FechaLlegada, "{0:MM/dd/yyyy}", new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                        @Html.ValidationMessageFor(model => model.Reserva.FechaLlegada, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Reserva.FechaSalida, htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Reserva.FechaSalida, "{0:MM/dd/yyyy}", new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                        @Html.ValidationMessageFor(model => model.Reserva.FechaSalida, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-sm-6 mt-2" style="float: left">
                <div class="form-group">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="TipoHabitacionId" class="control-label"></label>
                            @Html.DropDownListFor(s => s.TipoHabitacionId, Model.TiposHabitacionDD, "-- Seleccione un tipo --", new { @class = "form-control" })
                            <span asp-validation-for="TipoHabitacionId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" value="Continuar" class="btn btn-primary" style="width: 240px" />
                    </div>
                </div>
            </div>
        </form>
    </div>
    <script>
        var msg = '@TempData["Mensaje"]';
        if (msg.length) {
            alert(msg);
        }
    </script>
</div>





