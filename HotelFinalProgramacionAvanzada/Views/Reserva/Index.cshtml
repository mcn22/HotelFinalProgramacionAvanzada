@model IEnumerable<HotelFinalProgramacionAvanzada.Models.Reserva>
@using HotelFinalProgramacionAvanzada.Utility

@{ ViewData["Title"] = "Listado de reservas"; }

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Lista de reservas</h2>
    </div>
    @*<div class="col-6 text-right">
        <a onclick="ShowPopup('@Url.Action("Upsert", "Reserva", null, Context.Request.Scheme)','Nueva reserva')" class="btn btn-primary text-white"><i class="fas fa-random"></i> Nueva reserva</a>
    </div>*@
</div>

<table id="tblReservas" class="table table-striped table-bordered" style="width:100%">
    <thead class="thead-dark">
        <tr>
            @{
                if (User.IsInRole(SD.Roles.Cliente))
                {
                    <th>Tipo de habitacion</th>
                    <th>Nombre</th>
                    <th>Hotel</th>
                    <th>Llegada</th>
                    <th>Salida</th>
                }
                else
                {
                    <th>Id</th>
                    <th>Nombre usuario</th>
                    <th>Nombre hotel</th>
                    <th>
                        Opciones
                    </th>
                }
            }

        </tr>
    </thead>
</table>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
    @{
        if (User.IsInRole(SD.Roles.Cliente))
        {
            <script type="text/javascript" src="~/js/reservacliente.js"></script>
        }
        else
        {
            <script type="text/javascript" src="~/js/reserva.js"></script>
        }
    }
}
