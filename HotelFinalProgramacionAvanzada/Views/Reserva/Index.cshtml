@model IEnumerable<HotelFinalProgramacionAvanzada.Models.Reserva>
@using HotelFinalProgramacionAvanzada.Utility

@{ ViewData["Title"] = "Listado de reservas"; }

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Lista de reservas</h2>
    </div>
</div>

<table id="tblReservas" class="table table-striped table-bordered" style="width:100%">
    <thead class="thead-dark">
        <tr>
            @{
                if (User.IsInRole(SD.Roles.Cliente))
                {
                    <th>Id</th>
                    <th>Tipo de habitacion</th>
                    <th>Habitación</th>
                    <th>Hotel</th>
                    <th>Llegada</th>
                    <th>Salida</th>
                    <th>
                        Detalle
                    </th>
                }
                else
                {
                    <th>Id</th>
                    <th>Estado</th>
                    <th>Habitación</th>
                    <th>Cliente</th>
                    <th>Llegada</th>
                    <th>Salida</th>
                    <th>Saldo</th>
                    <th>
                        Estado
                    </th>
                }
            }

        </tr>
    </thead>
</table>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
    @{
        if (User.IsInRole(SD.Roles.Cliente))
        {
            <script type="text/javascript" src="~/js/reservacliente.js"></script>
        }
        else
        {
            <script type="text/javascript" src="~/js/reservaempleados.js"></script>
        }
    }
}
