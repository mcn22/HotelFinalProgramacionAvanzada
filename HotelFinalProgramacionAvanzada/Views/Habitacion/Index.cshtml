@model IEnumerable<HotelFinalProgramacionAvanzada.Models.Habitacion>

@{ ViewData["Title"] = "Listado de habitaciones"; }

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Lista de habitaciones</h2>
    </div>
    <div class="col-6 text-right">
        <a onclick="ShowPopup('@Url.Action("Upsert", "Habitacion", null, Context.Request.Scheme)','Nueva habitacion')" class="btn btn-primary text-white"><i class="fas fa-random"></i> Nueva habitacion</a>
    </div>
</div>

<table id="tblHabitaciones" class="table table-striped table-bordered" style="width:100%">
    <thead class="thead-dark">
        <tr>
            <th>Nombre</th>
            <th>Tipo</th>
            <th>Hotel</th>
            <th>
                Opciones
            </th>
        </tr>
    </thead>
</table>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript" src="~/js/habitacion.js"></script>
}
