@model HotelFinalProgramacionAvanzada.Models.EstadoReserva

@{ Layout = null; }

<div class="row">
    <div class="col-md-12">
        <form asp-action="Upsert" asp-route-id="@Model.EstadoReservaId" onsubmit="return PostForm(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EstadoReservaId" />
            <div class="form-group row m-1">
                <label asp-for="NombreEstado" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="NombreEstado" class="form-control" />
                </div>
                <span asp-validation-for="NombreEstado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <input type="submit" value="Guardar" class="btn btn-primary btn-block" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}