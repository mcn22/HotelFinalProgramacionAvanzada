@model IEnumerable<HotelFinalProgramacionAvanzada.Models.Hotel>

@{ ViewData["Title"] = "Listado de Hoteles"; }


<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Lista de Hoteles</h2>
    </div>
    <div class="col-6 text-right">
        <a onclick="ShowPopup('@Url.Action("Upsert", "Hotel", null, Context.Request.Scheme)','Nuevo Hotel')" class="btn btn-primary text-white"><i class="fas fa-random"></i> Nuevo Hotel</a>
    </div>
</div>

<table id="tblHoteles" class="table table-striped table-bordered" style="width:100%">
    <thead class="thead-dark">
        <tr>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Direccion</th>
            <th>Ciudad</th>
            <th>Telefono</th>
            <th>
               Opciones
            </th>
        </tr>
    </thead>
</table>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript" src="~/js/hotel.js"></script>
}